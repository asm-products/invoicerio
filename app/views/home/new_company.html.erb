<div class="col-md-4 col-md-offset-4">
  <div class="col-md-offset-3 col-md-9">
    <h2>Please fill in the data for your company.</h2>
  </div>
  <%= form_for(@company, :html => {:class => 'form-horizontal'}, :url => create_user_company_path) do |f| %>
    <div class="form-group">
      <%= f.label :name, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :address, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :address, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :city, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :city, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :country, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :country, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :phone, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :phone, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit "Create my company", :class => 'btn btn-default' %>
      </div>
    </div>
  <% end %>
</div>
