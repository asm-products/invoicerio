<div class="panel">
  <%= form_for(@company, :html => {:class => 'form-horizontal', :multipart => true}, :url => update_user_company_path, :remote => true) do |f| %>
    <legend>Information about your company</legend>
    <%= f.hidden_field :id, :value => @company.id %>
    <div class="form-group">
      <%= f.label :name, 'Company name:', :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :name, :placeholder => 'e.g. Acme Corp.', :autofocus => true, :class => 'form-control', :value => company.name %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :address, 'Company address:', :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :address, :placeholder => 'e.g. 100 1st Str.', :class => 'form-control', :value => company.address %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :city, 'City:', :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :city, :placeholder=> 'e.g. New York', :class => 'form-control', :value => company.city %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :country, 'Country:', :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.text_field :country, :class => 'form-control', :value => company.country %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :logo, :class => 'col-md-3 control-label' %> 
      <div class="col-md-9">
        <%= f.file_field :logo %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-3 col-md-9">
        <%= f.submit 'Save', :class => 'btn btn-success' %>
        <%= f.button 'Cancel', :id => 'company-settings-cancel', :class => 'btn btn-primary' %>
      </div>
    </div>
  <% end %>
</div>
