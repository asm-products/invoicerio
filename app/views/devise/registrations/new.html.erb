<div class="col-md-4 col-md-offset-4">
  <div class="col-md-offset-3 col-md-9">
    <h2>Sign up</h2>
  </div>
  <%= form_for(resource, :as => resource_name, :html => {:class => 'form-horizontal'}, :url => registration_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.email_field :email, :autofocus => true, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.password_field :password, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, :class => 'col-md-3 control-label' %>
      <div class="col-md-9">
        <%= f.password_field :password_confirmation, :class => 'form-control' %>
      </div>
    </div>
    <%= f.fields_for :company do |c| %>
      <div class="form-group">
        <%= c.label :name, :class => 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= c.text_field :name, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= c.label :address, :class => 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= c.text_field :address, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= c.label :city, :class => 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= c.text_field :city, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= c.label :country, :class => 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= c.text_field :country, :class => 'form-control' %>
        </div>
      </div>
      <div class="form-group">
        <%= c.label :phone, :class => 'col-md-3 control-label' %>
        <div class="col-md-9">
          <%= c.text_field :phone, :class => 'form-control' %>
        </div>
      </div>
    <% end %>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= f.submit "Sign up", :class => 'btn btn-default' %>
      </div>
    </div>
  <% end %>
  <div class="col-sm-offset-3 col-sm-9">
    <%= render "devise/shared/links" %>
  </div>
</div>
